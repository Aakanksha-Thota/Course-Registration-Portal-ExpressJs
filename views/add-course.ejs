<%- include('includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/forms.css">
    <link rel="stylesheet" type="text/css" href="/css/courses.css">

</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <% if(errorMessage){%>
            <div class="error"><%=errorMessage%></div>
        <%}%>
        <form class="course-form" action="<% if(edit===true){ %>/admin/edit-course <%}else{%>/admin/add-course <%}%>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(edit===true|| errorMessage){ %><%= course.title %><%}%>">
            </div>
            <div class="form-control">
                <label for="author">Author</label>
                <input type="text" name="author" id="author" value="<% if(edit===true|| errorMessage){ %><%= course.author %><%}%>">
            </div>
            <div class="form-control">
                <label for="duration">Duration</label>
                <input type="text" name="duration" id="duration" value="<% if(edit===true|| errorMessage){ %><%= course.duration %><%}%>">
            </div>
            <div class="form-control">
                <label for="level">Level</label>
                <input type="text" name="level" id="level" value="<% if(edit===true|| errorMessage){ %><%= course.level %><%}%>">
            </div>
            <input type="hidden" name="id" id="id" value="<% if(edit===true){ %><%= course._id %><%}%>">

            <button class="btn" type="submit">
                <% if(edit===true){ %>
                Edit Course
                <% } else {%>
                Add Course
                <%}%>
            </button>
        </form>
    </main>
<%- include('includes/end.ejs') %>